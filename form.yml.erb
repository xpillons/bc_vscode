---
cluster: "ccw"
form:
  - bc_num_hours
  - queue
  - num_gpus
  - working_dir
attributes:
  queue:
    widget: select
    options:
      - ['htc - CPU / Non MPI Jobs', 'htc', data-hide-num-gpus: true, data-set-num-gpus: 0]
      - ['hpc - CPU / MPI Jobs', 'hpc', data-hide-num-gpus: true, data-set-num-gpus: 0]
      - ['gpu - GPU / MPI or Non MPI Jobs', 'gpu', data-hide-num-gpus: false, data-set-num-gpus: 1]

  num_gpus:
    widget: "number_field"
    label: "Number of GPUs"
    value: 0
    min: 0
    max: 8
    step: 1

  working_dir:
    label: "Working Directory"
    data-filepicker: true
    data-target-file-type: dirs  # Valid values are: files, dirs, or both
    readonly: false
    help: "Select your project directory; defaults to $HOME"
  
